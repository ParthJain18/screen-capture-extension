{
  "manifest_version": 3,
  "name": "Periodic Screenshot Logger",
  "version": "1.0",
  "description": "An extension that takes periodic screenshots and saves them locally.",
  "permissions": ["tabs", "activeTab", "storage", "scripting", "downloads"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "<all_urls>"
  ]
}